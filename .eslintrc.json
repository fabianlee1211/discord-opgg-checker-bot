{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["dist"],
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "linebreak-style": 0,
    "no-else-return": 0,
    "no-useless-return": 0,
    "no-unused-vars": [0, { "varIgnorePattern": "_" }],
    "no-restricted-syntax": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0
  }
}
